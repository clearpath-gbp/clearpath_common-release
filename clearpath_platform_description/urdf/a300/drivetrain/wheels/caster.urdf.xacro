<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="a300_caster_wheel">

  <xacro:property name="a300_caster_wheel_radius" value="0.075" />
  <xacro:property name="a300_caster_wheel_mass" value="2.5" />
  <xacro:property name="a300_caster_wheel_width" value="0.05" />

  <xacro:macro name="a300_caster_wheel" params="prefix side">
    <xacro:property name="rotation_yaw" value="${math.pi if prefix == 'rear' else 0}"/>

    <link name="${prefix}_${side}_bracket_plate_link">
      <visual>
        <origin xyz="0 0 0" rpy="${math.pi / 2} 0 ${-math.pi / 2}"/>
        <material name="clearpath_dark_grey"/>
        <geometry>
          <mesh filename="package://clearpath_platform_description/meshes/a300/drivetrain/caster_bracket_plate.stl" />
        </geometry>
      </visual>
    </link>

    <joint name="${prefix}_${side}_bracket_plate_joint" type="fixed">
      <parent link="${prefix}_${side}_flange_mount"/>
      <child link="${prefix}_${side}_bracket_plate_link"/>
    </joint>

    <link name="${prefix}_${side}_bracket_swivel_link">
      <inertial>
        <mass value="0.5" />
        <origin xyz="0 0 0" />
        <inertia
          ixx="0.01" ixy="0" ixz="0"
          iyy="0.01" iyz="0"
          izz="0.01" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="${math.pi / 2} 0 ${-math.pi / 2}"/>
        <material name="clearpath_dark_grey"/>
        <geometry>
          <mesh filename="package://clearpath_platform_description/meshes/a300/drivetrain/caster_bracket_swivel.stl" />
        </geometry>
      </visual>
    </link>

    <joint name="${prefix}_${side}_bracket_swivel_joint" type="fixed">
      <parent link="${prefix}_${side}_bracket_plate_link"/>
      <child link="${prefix}_${side}_bracket_swivel_link"/>
      <origin xyz="0 0 -0.006237119"/>
      <axis xyz="0 0 1"/>
    </joint>

    <gazebo reference="${prefix}_${side}_bracket_swivel_joint">
      <springStiffness>0.5</springStiffness>
    </gazebo>

    <link name="${prefix}_${side}_wheel_link">
      <inertial>
        <mass value="${a300_caster_wheel_mass}" />
        <origin xyz="0 0 0" />
        <inertia
          ixx="${ a300_caster_wheel_mass/12 * (3*a300_caster_wheel_radius**2 + a300_caster_wheel_width**2) }" ixy="0" ixz="0"
          iyy="${ a300_caster_wheel_mass/2 * a300_caster_wheel_radius**2 }" iyz="0"
          izz="${ a300_caster_wheel_mass/12 * (3*a300_caster_wheel_radius**2 + a300_caster_wheel_width**2) }" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="${math.pi / 2} 0 ${-math.pi / 2}"/>
        <material name="clearpath_dark_grey"/>
        <geometry>
          <mesh filename="package://clearpath_platform_description/meshes/a300/drivetrain/wheels/caster.stl" />
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${math.pi/2} 0 0" />
        <geometry>
          <cylinder length="${a300_caster_wheel_width}" radius="${a300_caster_wheel_radius}" />
        </geometry>
      </collision>
    </link>

    <gazebo reference="${prefix}_${side}_wheel_link">
      <turnGravityOff>false</turnGravityOff>
      <kp>1000000.0</kp>
      <kd>100.0</kd>
      <mu1>0.05</mu1>
      <mu2>0.05</mu2>
      <fdir1>1 0 0</fdir1>
      <minDepth>0.00</minDepth>
      <implicitSpringDamper>1</implicitSpringDamper>
    </gazebo>
<!--
    <gazebo>
      <plugin filename="libgz-sim-wheel-slip-system.so" name="gz::sim::systems::WheelSlip">
        <wheel link_name="${prefix}_${side}_wheel_link">
          <slip_compliance_lateral>1.0</slip_compliance_lateral>
          <slip_compliance_longitudinal>1.0</slip_compliance_longitudinal>
          <wheel_normal_force>0</wheel_normal_force>
          <wheel_radius>${a300_caster_wheel_radius}</wheel_radius>
        </wheel>
      </plugin>
    </gazebo> -->

    <joint name="${prefix}_${side}_wheel_joint" type="continuous">
      <parent link="${prefix}_${side}_bracket_swivel_link"/>
      <child link="${prefix}_${side}_wheel_link"/>
      <origin xyz="-0.054 0 -0.108762881" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>

  </xacro:macro>
</robot>
